# Turn off that annoying start up message
startup_message off
 
# Turn the even more annoying whole-screen-flash-on-tab-complete "feature"
vbell off
  
# I use control+a for beginning-of-line, this remaps it to the tick/tilda key
escape ``

# Bind tick+e to show the tick character since tick+tick is too convenience to toggle windows
escape `e

# Window list at the bottom. hostname, centered tabs and redmarked active windows:
#shelltitle '$ |'
hardstatus alwayslastline
hardstatus string '%{= kG} %{= kw}%?%-Lw%?%{r}%{W}%n*%f%t%?%u%?%{r}%{w}%?%+Lw%?%? %= %{g} %{W}%c '

#hardstatus alwayslastline "%{= kR} %-Lw%{=b Kk} %n%f %t %{-}%+Lw %=%{= dd} %C"

defscrollback 50000
